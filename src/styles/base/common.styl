@font-face {
  font-family: 'iconfont';  /* project id 817886 */
  src: url('//at.alicdn.com/t/font_817886_c4qmcccj5n.eot');
  src: url('//at.alicdn.com/t/font_817886_c4qmcccj5n.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_817886_c4qmcccj5n.woff') format('woff'),
  url('//at.alicdn.com/t/font_817886_c4qmcccj5n.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_817886_c4qmcccj5n.svg#iconfont') format('svg');
}

.iconfont
  font-family:"iconfont" !important
  font-size:16px
  font-style:normal
  -webkit-font-smoothing: antialiased
  -webkit-text-stroke-width: 0.2px
  -moz-osx-font-smoothing: grayscale

* {
  box-sizing: border-box
}

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $fontColor
  font-size: px2rem(12)
  height 100%

#wrapper
  width: 100%
  height 100%
  overflow hidden

.container
  &.child-view
    padding-top: px2rem($header-height)

