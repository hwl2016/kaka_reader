@font-face {
  font-family: 'iconfont';  /* project id 817886 */
  src: url('//at.alicdn.com/t/font_817886_c4qmcccj5n.eot');
  src: url('//at.alicdn.com/t/font_817886_c4qmcccj5n.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_817886_c4qmcccj5n.woff') format('woff'),
  url('//at.alicdn.com/t/font_817886_c4qmcccj5n.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_817886_c4qmcccj5n.svg#iconfont') format('svg');
}

.iconfont
  font-family:"iconfont" !important
  font-size:16px
  font-style:normal
  -webkit-font-smoothing: antialiased
  -webkit-text-stroke-width: 0.2px
  -moz-osx-font-smoothing: grayscale

* {
  box-sizing: border-box
}

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  color: $fontColor
  font-size: px2rem(12)
  height 100%

#wrapper
  width: 100%
  height 100%

.container
  background: $color-background

/* animation */
.child-view {
    position: absolute;
    padding-top: px2rem($header-height);
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;   
    -webkit-transition: all .8s cubic-bezier(.55, 0, .1, 1);
    transition: all .8s cubic-bezier(.55, 0, .1, 1);
    box-sizing: border-box;
    overflow: auto;
}
.in-iphonex {
    .child-view {
        padding-top: px2rem(88 + 68); // 增加68
    }
}
.in-ios {
    .child-view {
        padding-top: px2rem(88 + 40);
    }
}
// 申购页面的字view
.child-fundbuy {
    position: fixed;
}
/* animation */
.child-explain {
    z-index: 1;
    -webkit-transition: all .8s cubic-bezier(.55, 0, .1, 1);
    transition: all .8s cubic-bezier(.55, 0, .1, 1);

    overflow: auto;
}
.slide-left-enter, .slide-right-leave-active {
    -webkit-transform: translate(-100%, 0);
    transform: translate(-100%, 0);
}

.slide-left-leave-active, .slide-right-enter {
    -webkit-transform: translate(100%, 0);
    transform: translate(100%, 0);
}

/* riskRating 页面 */
.slide-up-enter, .slide-up-leave-active {
    -webkit-transform: translate(0, 100%);
    transform: translate(0, 100%);
}

/* right in, left out */
.slide-right-left-leave-active, .slide-right-left-enter {
    -webkit-transform: translate(100%, 0);
    transform: translate(100%, 0);
}

/* popup */
.popup-enter, .popup-leave-to {
    -webkit-transform: translate(0, 100%);
    transform: translate(0, 100%);
}

.popup-enter-active, .popup-leave-active {
    transition: all .3s ease;
}

/* fade */
.fade-enter, .fade-leave-to {
    opacity: 0;
}

.fade-enter-active, .fade-leave-active {
    transition: all .2s ease;
}

/* keyframes */
@keyframes fade-in-out {
    0% {
        opacity: 0;
    }
    0.1% {
        opacity: 1;
    }
    52% {
        opacity: 1;
    }
    52.1% {
        opacity: 0;
    }
    100% {
        opacity: 0;
    }
}
@-webkit-keyframes fade-in-out {
    0% {
        opacity: 0;
    }
    0.1% {
        opacity: 1;
    }
    52% {
        opacity: 1;
    }
    52.1% {
        opacity: 0;
    }
    100% {
        opacity: 0;
    }
}


